{
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk with xelatex",
            "tools": ["latexmk-xelatex"]
        },
        {
            "name": "texcount",
            "tools": [
                "texcount"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk-xelatex",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-file-line-error",
                "-halt-on-error",
                "-interaction=nonstopmode",
                "-synctex=1",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "texcount",
            "command": "texcount",
            "args": [
                "%DOCFILE%.tex",
                "-merge",
                "-v",
                "-html",
                "-out=%DOCFILE%_count.html"
            ]
        }
    ]
}
